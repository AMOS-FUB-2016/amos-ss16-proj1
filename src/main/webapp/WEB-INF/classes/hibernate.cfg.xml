<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">
      org.hibernate.dialect.PostgreSQLDialect
   </property>
   <property name="hibernate.connection.driver_class">
      org.postgresql.Driver
   </property>
   
   <property name="hibernate.connection.url">
      jdbc:postgresql://localhost:5432/HibernateTest
   </property>
   <property name="hibernate.connection.username">
      postgres
   </property>
   <property name="hibernate.connection.password">
      chaostesting
   </property>
   
   <property name="hbm2ddl.auto">update</property>

   <!-- List of persistence classes -->
   <mapping class="de.fuberlin.chaostesting.model.Test"/>
   <mapping class="de.fuberlin.chaostesting.model.User"/>
   <mapping class="de.fuberlin.chaostesting.model.Response"/>

</session-factory>
</hibernate-configuration>
